<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.LibreriaFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/title_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="10dp"
        android:text="@string/recent_activity"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/recycler_library"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
            android:padding="10dp"
        android:id="@+id/recycler_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_activity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/title_likes"
        />
    <TextView
        android:id="@+id/title_likes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/song_likes"
        android:textStyle="bold"
        android:textSize="28sp"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/recycler_library"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler_linear"
        />
    <LinearLayout
        android:id="@+id/recycler_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title_likes"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_likes"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="10dp"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>