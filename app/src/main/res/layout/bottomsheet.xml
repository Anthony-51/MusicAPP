<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_bottom"
    android:clickable="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="124dp"
    app:layout_behavior="com.example.reproductor.Clases.CustomBottomSheet">

    <!--  Here is your content  -->

        <LinearLayout
            android:id="@+id/layout_collapse"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#242424"
            android:gravity="end"
            android:orientation="vertical"
            android:alpha="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/controls_media_player_collapse"
                android:layout_width="320dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name_reproductor_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:text="@string/song"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageButton
                    android:id="@+id/play_collapse"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg_reproductor"
                    android:backgroundTint="@color/btn_bg_color"
                    android:contentDescription="@string/song"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_pause"
                    android:onClick="musicControl"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/next_collapse"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/next_collapse"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg_reproductor"
                    android:backgroundTint="@color/btn_bg_color"
                    android:contentDescription="@string/song"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_next"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/img_reproductor"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/button_rounded"
            android:contentDescription="@string/artist"
            android:minWidth="45dp"
            android:minHeight="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ainaaiba" />


    <LinearLayout
        android:id="@+id/layout_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/unlike_song"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:onClick="UnlikeSong"
                android:src="@drawable/ic_unlike"
                android:background="@drawable/btn_bg_reproductor"
                android:backgroundTint="@color/btn_pressed_like_unlike"
                android:tint="@color/btn_tint_like_unlike"/>
            <TextView
                android:id="@+id/name_reproductor"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="160dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/song"
                android:textSize="28sp" />
            <ImageButton
                android:id="@+id/like_song"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:onClick="LikeSong"
                android:src="@drawable/ic_like"
                android:background="@drawable/btn_bg_reproductor"
                android:backgroundTint="@color/btn_pressed_like_unlike"
                android:tint="@color/btn_tint_like_unlike"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true">
            <SeekBar
                android:id="@+id/seekBar_reproductor"
                android:layout_width="350dp"
                android:layout_height="wrap_content"

                android:secondaryProgressTint="@color/black_overlay" />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <ImageButton
                android:id="@+id/shufle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg_reproductor"
                android:backgroundTint="@color/btn_bg_color"
                android:contentDescription="@string/song"
                android:padding="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_shuffle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/previous"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/previous"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg_reproductor"
                android:backgroundTint="@color/btn_bg_color"
                android:contentDescription="@string/song"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_previous"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/play"
                app:layout_constraintStart_toEndOf="@id/shufle"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/play"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_bg_reproductor"
                android:backgroundTint="@color/btn_bg_color"
                android:contentDescription="@string/song"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pause"
                android:onClick="musicControl"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/next"
                app:layout_constraintStart_toEndOf="@id/previous"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg_reproductor"
                android:backgroundTint="@color/btn_bg_color"
                android:contentDescription="@string/song"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/replay"
                app:layout_constraintStart_toEndOf="@id/play"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/replay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg_reproductor"
                android:backgroundTint="@color/btn_bg_color"
                android:contentDescription="@string/song"
                android:padding="7dp"
                android:onClick="replaySong"
                android:src="@drawable/ic_replay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/next"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_list_songs"
        android:layout_below="@id/layout_collapse"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/layout_bottom_list_songs"
            layout="@layout/bottom_sheet_list_songs"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>